{
  "manifest_version": 3,
  "name": "SummaReader",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.reddit.com/*"
  ],
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ]
}